{
	printf("Exception: HardFault_Handler\n");
	while(1);
}

void MemManage_Handler(void)
{
	printf("Exception: MemManage_Handler\n");
	while(1);
}

void BusFault_Handler(void)
{
	printf("Exception: BusFault_Handler\n");
